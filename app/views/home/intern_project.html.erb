    <%= link_to 'Proteins', proteins_list_path, data: { turbo_stream: true } %>
    <%= link_to 'Steak', proteins_detail_path, data: { turbo_stream: true } %>
  </div>
  <div class="section">
    <%= link_to 'Drinks', drinks_list_path, data: { turbo_stream: true } %>
