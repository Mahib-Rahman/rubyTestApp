<h1>Intern Project</h1>

<div class="control-bar">
  <div class="section">
    <%= link_to 'Fruits', fruits_list_path, data: { turbo_stream: true } %>
    <%= link_to 'Orange', fruits_detail_path, data: { turbo_stream: true } %>
  </div>
  <div class="section">
    <%= link_to 'Vegetables', vegetables_list_path, data: { turbo_stream: true } %>
    <%= link_to 'Lettuce', vegetables_detail_path, data: { turbo_stream: true } %>
  </div>
